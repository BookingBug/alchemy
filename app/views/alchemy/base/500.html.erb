<%= toolbar(
  buttons: [
    {
      icon: 'back',
      url: request.referer || "#{Alchemy::MountPoint.get}/admin/dashboard",
      label: Alchemy.t(:back),
      title: Alchemy.t(:back),
      hotkey: 'alt+z',
      dialog: false,
      skip_permission_check: true
    }
  ], search: false
) %>

<%= render_message(:error) do %>
  <h1><%= Alchemy.t('An error happened') %></h1>
  <h2>
    <%= @error.class %>
    <%= @notice %>
  </h2>
  <p>
  <% @trace.each do |line| %>
    <%= line %><br>
  <% end %>
  </p>
<% end %>
